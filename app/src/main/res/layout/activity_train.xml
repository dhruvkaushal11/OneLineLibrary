<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.onelinelibrary.Trains_two"
    android:background="@android:color/background_dark">


    <TextView
        android:text="External Faculty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView6"
        android:layout_marginLeft="5dp" />

    <TextView
        android:text="Abhinav Gupta"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:gravity="center"
        android:textSize="30dp"
        android:background="@color/error_color"
        android:textColor="@color/cardview_light_background"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Ruby Beniwal"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:gravity="center"
        android:textSize="30dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/cardview_light_background"
        android:layout_above="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Internal Faculty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView7"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:id="@+id/textView8"
        android:layout_marginBottom="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/metro"
        android:layout_marginTop="34dp"
        android:id="@+id/imageView2"
        android:layout_above="@+id/textView8"
        android:adjustViewBounds="false"
        android:scaleType="fitXY" />

    <Spinner
        android:layout_width="fill_parent"
        android:id="@+id/spinner"
        android:spinnerMode="dropdown"
        android:padding="5dp"
        android:background="#ffffff"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/spinner3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="50dp" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6"
        android:layout_marginLeft="66dp"
        android:layout_marginStart="66dp"
        android:layout_marginBottom="102dp"
        android:id="@+id/button" />

    <Spinner
        android:layout_width="fill_parent"
        android:id="@+id/spinner3"
        android:spinnerMode="dropdown"
        android:padding="5dp"
        android:background="#ffffff"
        android:gravity="center"
        android:layout_marginTop="18dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
